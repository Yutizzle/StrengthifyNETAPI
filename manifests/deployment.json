{
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
      "name": "strengthify"
    },
    "spec": {
      "replicas": 1,
      "selector": {
        "matchLabels": {
          "app": "strengthify"
        }
      },
      "template": {
        "metadata": {
          "labels": {
            "app": "strengthify"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "strengthifynetapi",
              "image": "strengthifycontainerregistry.azurecr.io/strengthifynetapi",
              "ports": [
                {
                  "containerPort": 5000
                }
              ],
              "env": [
                {
                  "name": "SUPABASE_URL",
                  "valueFrom": {
                    "secretKeyRef": {
                      "name": "strengthify-secret",
                      "key": "SUPABASE_URL"
                    }
                  }
                },
                {
                  "name": "SUPABASE_KEY",
                  "valueFrom": {
                    "secretKeyRef": {
                      "name": "strengthify-secret",
                      "key": "SUPABASE_KEY"
                    }
                  }
                },
                {
                  "name": "SUPABASE_SERVICE_KEY",
                  "valueFrom": {
                    "secretKeyRef": {
                      "name": "strengthify-secret",
                      "key": "SUPABASE_SERVICE_KEY"
                    }
                  }
                },
                {
                  "name": "JWT_SECRET",
                  "valueFrom": {
                    "secretKeyRef": {
                      "name": "strengthify-secret",
                      "key": "JWT_SECRET"
                    }
                  }
                }
              ]
            }
          ]
        }
      }
    }
  }